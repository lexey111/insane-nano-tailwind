{
  "name": "insane-nano-core",
  "version": "1.0.0",
  "description": "more advanced semi-static builder",
  "main": "src/js/main.ts",
  "type": "module",
  "scripts": {
    "cleanup": "bun rimraf ./dist",
    "build": "bun run cleanup && bun esbuild.js",
    "start": "bun esbuild-serve.js",
    "deploy": "bun run build && git subtree push --prefix dist origin gh-pages",
    "lint": "eslint",
    "lint-fix": "eslint --fix"
  },
  "keywords": [
    "insane",
    "frontend",
    "builder",
    "advanced"
  ],
  "author": "lexey111",
  "license": "ISC",
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "^0.18.2",
    "@stylistic/eslint-plugin-js": "^2.2.2",
    "@stylistic/eslint-plugin-ts": "^2.2.2",
    "@types/bun": "^1.1.5",
    "@typescript-eslint/parser": "^7.13.1",
    "esbuild": "^0.21.5",
    "esbuild-plugin-tailwindcss": "^1.2.0",
    "eslint": "^9.5.0",
    "globals": "^15.6.0",
    "htmlnano": "^2.1.1",
    "rimraf": "^5.0.7",
    "svgo": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": { "tailwindcss": "^3.4.4" }
}
